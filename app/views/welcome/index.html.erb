<div id="search-form">
  <%= form_with url: root_path, method: :get do |f| %>
    <%= f.text_field :search %>
    <%= f.submit "Search Merchants by Name" %>
  <% end %>
</div>

<% if !@merchant.nil? %>
  <div id="search-results">
    <ul>
      <li>
        <%= link_to @merchant.name, merchant_path(@merchant.id) %>
      </li>
    </ul>
  </div>
<% end %>