<section id='merchants' class="container d-flex justify-content-center flex-column align-items-center">
  <h1 class="text-light pb-3">Merchants</h1>
  <div class="row'">
    <div class="col-m-10">
      <ul class="list-group">
        <% count = 1 %>
        <% @merchants.each do |merchant| %>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%= link_to merchant.name, merchant_path(merchant.id) %></div>
              <strong>Type:</strong> <%= merchant.type %>
            </div>
            <span class="badge bg-primary rounded-pill"><%= count %></span>
            <% count += 1 %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>